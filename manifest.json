{
	"manifest_version": 3,
	"name": "Tab Saver",
	"version": "1.0.0",

	"description": "Organize Your Browsing with Tab Saver",


	"permissions": [
		"tabs",
		"tabGroups",
		"downloads",
		"storage"
	],

	"incognito": "split",
	
	"background": {
		"service_worker": "background.js"
	},

	"icons": {
		"16": "assets/logo_16.png",
		"32": "assets/logo_32.png",
		"48": "assets/logo_48.png",
		"64":"assets/logo_64.png",
		"128": "assets/logo_128.png"
	  },

	"action": {
		"default_title": "TabSaver",
		"default_popup": "tabSaver.html"
	}
}